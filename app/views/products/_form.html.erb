<div class="container">
  <%= form_for(@product) do |f| %>

    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@product.errors.count, "error") %>
          prohibited this product from being saved:
        </h2>
     
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <label class="col-1 col-form-label"><%= f.label :name %></label>
      <div class="col-8">
      <%= f.text_field :name %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-1 col-form-label"><%= f.label :description %></label>
      <div class="col-8">
      <%= f.text_area :description %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-1 col-form-label"><%= f.label "Category" %></label>
      <div class="col-8">
      <%= f.collection_select(:category_id, Category.all, :id, :name) %>
      </div>
    </div>

    <div class="form-check row">
      <label class="col-1 col-form-label"><%= f.label "Oils" %></label>
      <div class="col-8">
        <%= f.collection_check_boxes(:oil_ids, Oil.all, :id, :name) do |b| %>
          <p>
            <%= b.check_box :class => "label-checkbox" %>
            <%= b.label %>
          </p>
        <% end %>
      </div>
    </div>

    <%= f.fields_for :volume_costs do |vc_builder| %>
      <div class="form-group row">
        <label class="col-1 col-form-label"><%= vc_builder.label "Volume" %></label>
        <%= vc_builder.number_field :volume %>
        <div class="input-group-addon">ozs</div>

        <label class="col-1 col-form-label"><%= vc_builder.label "Cost" %></label>
        <div class="input-group-addon">$</div>
        <%= vc_builder.number_field :cost %>
      </div>  
    <% end %>

    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>
</div>