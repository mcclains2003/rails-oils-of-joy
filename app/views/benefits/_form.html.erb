<%= form_for(@benefit) do |f| %>

  <% if @benefit.errors.any? %>
    <div class="alert alert-danger">
      <h2>
        <%= pluralize(@benefit.errors.count, "error") %>
        prohibited this benefit from being saved:
      </h2>
   
      <ul>
      <% @benefit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <br>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>