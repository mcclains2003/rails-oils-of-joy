<%= form_for(@oil) do |f| %>

  <% if @oil.errors.any? %>
    <div class="alert alert-danger">
      <h2>
        <%= pluralize(@oil.errors.count, "error") %>
        prohibited this oil from being saved:
      </h2>
   
      <ul>
      <% @oil.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label "Benefits" %>
    <div class="container-fluid">
      <%= f.collection_check_boxes(:benefit_ids, Benefit.all, :id, :description) do |b| %>
        <div class="d-inline-block col-md-3">
          <%= b.check_box :class => "label-checkbox" %>
          <%= b.label %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>