<%= form_tag(sessions_path) do %>

  <%= label_tag 'Email' %>
  <%= email_field_tag :email, '', placeholder: "Email" %>
  <br>
  <%= label_tag 'Password' %>
  <%= password_field_tag :password, '', placeholder: "Password" %>
  <br>
  <%= submit_tag "Login" %>

  <%= link_to("login with facebook!", "/auth/facebook") %>

<% end %>